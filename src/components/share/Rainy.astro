<div class="">
  <div id="containerRain" class="z-[5] fixed">
    <canvas class="top-0 left-0 w-screen h-screen z-[5]" id="canvas"></canvas>
  </div>
  <img
    src="/avila.jpg"
    alt="avila image"
    class="object-cover object-center blur-[13px] w-screen h-screen fixed top-0 left-0 z-0"
  />
</div>
<script>
  import RaindropFX from "raindrop-fx";
  var canvas = document.getElementById("canvas") as HTMLCanvasElement;
  var rect = canvas.getBoundingClientRect();
  canvas.width = rect.width;
  canvas.height = rect.height;
  var raindropFx = new RaindropFX({
    canvas: canvas,
    background: "/avila.jpg",
  });
  let rain = false;
  const button = document.getElementById("rain-btn");

  // Maneja los clics en cada botÃ³n.

  button.addEventListener("click", () => {
    if (!rain) {
      rain = true;
      console.log(raindropFx);
      raindropFx.options.spawnLimit = 200;
      raindropFx.start();
    } else {
      //  rain = false;
      console.log(raindropFx);

      raindropFx.options.spawnLimit = 0;
      rain = false;

      raindropFx.stop();
    }  });
</script>
