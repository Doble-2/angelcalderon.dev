---
import { Image } from "astro:assets";

const { className, href, title, image, color } = Astro.props;
---

<div
    class:list={[
        `col-span-2 bg-white bg-opacity-25 rounded-xl max-h-[50vh] flex flex-col items-center`,
        className,
    ]}
>
    <Image
        height={40}
        width={40}
        loading="lazy"
        class="object-cover w-64"
        src={image}
        alt={title}
    />
    <div
       
        class="relative bottom-8 flex flex-col items-center justify-center w-full gap-2 font-bold"
    >
      {title}
        <button
            class="bg-blue-600 text-white py-3 px-4 rounded-full flex justify-center items-center w-44"
        >
            <a href="/profile.png" download class="text-sm font-semibold">
                Ver m√°s
            </a>
        </button>
    </div>
</div>
