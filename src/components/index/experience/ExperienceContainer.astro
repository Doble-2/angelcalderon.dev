---
interface Props {
    enterprise: string;
    title: string;
    dates: string;
    description: string;
}

const { enterprise, title, dates, description } = Astro.props;
---

<li class="relative mb-6 md:px-5">
    <div class="flex items-center">
        <div
            class="z-10 flex mr-2 items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 dark:ring-gray-900 shrink-0"
        >
            <svg
                class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                ></path>
            </svg>
        </div>
        <h3 class="text-base font-semibold lg:text-lg xl:text-xl">
            {enterprise} | {title}
        </h3>
    </div>
    <div class="mt-3">
        <time
            class="block mb-2 text-sm font-normal leading-none lg:text-md xl:text-lg"
            >{dates}</time
        >
        <p class="text-md font-normal lg:text-md xl:text-lg">
            {description}
        </p>
    </div>
</li>
