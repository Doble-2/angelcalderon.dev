---
import { Image } from "astro:assets";
const { className, href, title, image } = Astro.props;
---

<div class:list={["col-span-1 bg-sky-800 max-w-40 transition-transform duration-300 ease-in-out hover:scale-150 ", className]}>
    <a href={href}  target="_blank" title={title} class="">
        <Image
            height={40}
            width={40}
            loading="lazy"
            class="object-cover h-full w-full"
            src={image}
            alt={title}
        />
    </a>
</div>
